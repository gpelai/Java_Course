package course;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Type three numbers in a row: ");
		
		int a = sc.nextInt();
		int b = sc.nextInt();
		int c = sc.nextInt();
		
		if (a > b && a > c) {
			System.out.println("Higher num: " + a);
		}
		
		else if (b > c) {
			System.out.println("Higher num: " + b);
		}
		
		else {
			System.out.println("Higher num: " + c);
		}
		
		sc.close();
		
	}
}
